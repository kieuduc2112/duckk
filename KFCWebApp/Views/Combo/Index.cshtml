@model IEnumerable<KFCWebApp.Models.Combo>
@{
    ViewData["Title"] = "Combo món ăn";
    var categories = ViewBag.Categories as List<KFCWebApp.Models.ComboCategory>;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
}

<div class="container py-4">
    <h2 class="mb-4">Combo món ăn</h2>
    
    <!-- Filter danh mục -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a href="@Url.Action("Index")" class="btn @(selectedCategoryId == null ? "btn-primary" : "btn-outline-primary")">
                Tất cả
            </a>
            @foreach (var category in categories ?? new List<KFCWebApp.Models.ComboCategory>())
            {
                <a href="@Url.Action("Index", new { categoryId = category.Id })" 
                   class="btn @(selectedCategoryId == category.Id ? "btn-primary" : "btn-outline-primary")">
                    @category.Name
                </a>
            }
        </div>
    </div>

    <!-- Danh sách combo -->
    <div class="row">
        @foreach (var combo in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(combo.ImageUrl))
                    {
                        <img src="@combo.ImageUrl" class="card-img-top" alt="@combo.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@combo.Name</h5>
                        <p class="card-text text-muted">@combo.Description</p>
                        <div class="mb-2">
                            <small class="text-muted">@combo.ComboCategory?.Name</small>
                        </div>
                        <div class="mb-2">
                            <strong class="text-primary">@combo.Price.ToString("N0") VNĐ</strong>
                            @if (combo.OriginalPrice.HasValue && combo.OriginalPrice > combo.Price)
                            {
                                <small class="text-muted text-decoration-line-through ms-2">@combo.OriginalPrice.Value.ToString("N0") VNĐ</small>
                            }
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Bao gồm:</small><br>
                            @foreach (var item in combo.ComboItems.Take(3))
                            {
                                <span class="badge bg-secondary me-1">@item.Product?.Name x @item.Quantity</span>
                            }
                            @if (combo.ComboItems.Count > 3)
                            {
                                <span class="badge bg-secondary">+@(combo.ComboItems.Count - 3) món khác</span>
                            }
                        </div>
                        <div class="mt-auto">
                            <a href="@Url.Action("Details", new { id = combo.Id })" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fas fa-eye me-1"></i>Chi tiết
                            </a>
                            <button class="btn btn-primary btn-sm btn-add-to-cart" data-combo-id="@combo.Id" data-combo-name="@combo.Name">
                                <i class="fas fa-cart-plus me-1"></i>Thêm vào giỏ
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Không có combo nào</h4>
            <p class="text-muted">Hiện tại chưa có combo món ăn nào</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-add-to-cart').click(function() {
                var comboId = $(this).data('combo-id');
                var comboName = $(this).data('combo-name');
                
                $.post('@Url.Action("AddToCart", "Cart")', { comboId: comboId, quantity: 1 })
                    .done(function(response) {
                        if (response.success) {
                            alert('Đã thêm combo "' + comboName + '" vào giỏ hàng!');
                            // Cập nhật số lượng giỏ hàng nếu có
                            if (response.cartCount !== undefined) {
                                $('.cart-count').text(response.cartCount);
                            }
                        } else {
                            alert(response.message || 'Có lỗi xảy ra!');
                        }
                    })
                    .fail(function() {
                        alert('Có lỗi xảy ra khi thêm vào giỏ hàng!');
                    });
            });
        });
    </script>
} 