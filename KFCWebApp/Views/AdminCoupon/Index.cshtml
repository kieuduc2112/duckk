@model IEnumerable<KFCWebApp.Models.Coupon>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý mã giảm giá";
}
<h2>Quản lý mã giảm giá</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Thêm mã mới</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Mô tả</th>
            <th>Loại</th>
            <th>Giá trị</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th>Danh mục</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Description</td>
                <td>@item.Type</td>
                <td>@(item.Type == KFCWebApp.Models.CouponType.Percentage ? ($"{item.Value:N0}%") : ($"{item.Value:N0} VNĐ"))</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Quantity</td>
                <td>@(item.IsActive ? "Hiện" : "Ẩn")</td>
                <td>@item.CouponCategory?.Name</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table> 