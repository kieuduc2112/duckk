@model IEnumerable<KFCWebApp.Models.Promotion>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý khuyến mãi";
}
<h2>Quản lý khuyến mãi</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Thêm khuyến mãi mới</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Tên chương trình</th>
            <th>Thời gian</th>
            <th>Loại</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@item.ConditionType</td>
                <td>@(item.IsActive ? "Đang hoạt động" : "Ngừng")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table> 