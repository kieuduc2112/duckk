@model KFCWebApp.Models.ProductPromotion
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Xóa khuyến mãi sản phẩm";
}
<h2>Xóa khuyến mãi sản phẩm</h2>
<div>
    <h4>Bạn có chắc chắn muốn xóa khuyến mãi cho 2 sản phẩm: <b>@Model.Product1?.Name</b> và <b>@Model.Product2?.Name</b>?</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div> 