@model KFCWebApp.Models.ComboPromotion
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm khuyến mãi combo sản phẩm";
    var products = (List<KFCWebApp.Models.Product>)ViewBag.Products;
}
<h2>Thêm khuyến mãi combo sản phẩm</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên combo</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Từ ngày</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">Đến ngày</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Đang hoạt động</label>
    </div>
    <div class="mb-3">
        <label class="form-label">Chọn sản phẩm combo và số lượng từng sản phẩm</label>
        <div id="combo-products">
            @for (int i = 0; i < 3; i++)
            {
                <div class="row mb-2">
                    <div class="col-7">
                        <select name="productIds" class="form-select">
                            <option value="">-- Chọn sản phẩm --</option>
                            @foreach (var p in products)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-5">
                        <input name="quantities" type="number" min="1" class="form-control" placeholder="Số lượng từng sản phẩm" />
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Loại phần thưởng</label>
        <select asp-for="RewardType" class="form-select" id="rewardType">
            <option value="Percent">Giảm %</option>
            <option value="Amount">Giảm tiền</option>
            <option value="Gift">Tặng sản phẩm</option>
        </select>
    </div>
    <div class="mb-3" id="rewardValueDiv">
        <label asp-for="RewardValue" class="form-label">Giá trị phần thưởng</label>
        <input asp-for="RewardValue" class="form-control" />
        <span asp-validation-for="RewardValue" class="text-danger"></span>
    </div>
    <div class="mb-3" id="rewardProductDiv" style="display:none">
        <label asp-for="RewardProductId" class="form-label">Sản phẩm tặng</label>
        <select asp-for="RewardProductId" class="form-select">
            <option value="">-- Chọn sản phẩm --</option>
            @foreach (var p in products)
            {
                <option value="@p.Id">@p.Name</option>
            }
        </select>
        <span asp-validation-for="RewardProductId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
<script>
    document.getElementById('rewardType').addEventListener('change', function() {
        var type = this.value;
        document.getElementById('rewardValueDiv').style.display = (type === 'Gift') ? 'none' : '';
        document.getElementById('rewardProductDiv').style.display = (type === 'Gift') ? '' : 'none';
    });
</script> 