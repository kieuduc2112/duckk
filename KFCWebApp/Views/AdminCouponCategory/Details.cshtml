@model KFCWebApp.Models.CouponCategory
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết danh mục mã giảm giá";
}
<h2>Chi tiết danh mục mã giảm giá</h2>
<div class="mb-3">
    <strong>Tên danh mục:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Mô tả:</strong> @Model.Description
</div>
<div class="mb-3">
    <strong>Trạng thái:</strong> @(Model.IsActive ? "Hiện" : "Ẩn")
</div>
<div class="mb-3">
    <strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a> 