@model KFCWebApp.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}
<h2>Xóa sản phẩm</h2>
<p>Bạn có chắc chắn muốn xóa sản phẩm: <b>@Model.Name</b>?</p>
<form asp-action="Delete" method="post">
