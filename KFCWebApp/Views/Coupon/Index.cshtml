@model IEnumerable<KFCWebApp.Models.Coupon>
@{
    ViewData["Title"] = "Danh sách mã giảm giá";
}
<div class="container py-4">
    <h2 class="mb-4">Danh sách mã giảm giá đang có</h2>
    <div class="row">
        @foreach (var coupon in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge bg-success me-2">@coupon.Code</span>
                            <button class="btn btn-outline-primary btn-sm btn-copy" data-code="@coupon.Code" title="Sao chép mã">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                        <h5 class="card-title mb-2">@coupon.Description</h5>
                        <div class="mb-2">
                            <span class="badge bg-info">
                                @if (coupon.Type == KFCWebApp.Models.CouponType.Percentage)
                                {
                                    <text>Giảm @coupon.Value.ToString("N0")%</text>
                                }
                                else
                                {
                                    <text>Giảm @coupon.Value.ToString("N0") VNĐ</text>
                                }
                            </span>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Hạn dùng: @coupon.StartDate.ToString("dd/MM/yyyy") - @coupon.EndDate.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Số lượng còn lại: @coupon.Quantity</small>
                        </div>
                        <div class="mt-auto">
                            <span class="badge bg-primary">@((coupon.IsActive && coupon.Quantity > 0 && coupon.EndDate >= DateTime.Now) ? "Còn hiệu lực" : "Hết hiệu lực")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Hiện tại chưa có mã giảm giá nào</h4>
        </div>
    }
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-copy').click(function() {
                var code = $(this).data('code');
                navigator.clipboard.writeText(code).then(function() {
                    alert('Đã sao chép mã: ' + code);
                }, function() {
                    alert('Không thể sao chép mã!');
                });
            });
        });
    </script>
} 